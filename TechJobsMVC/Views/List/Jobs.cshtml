<div class="container body-content">

    <h1>@ViewBag.title</h1>
    @foreach (TechJobsMVC.Models.Job job in ViewBag.jobs)
    {
        <style>
            th, td {
                padding: 5px;
                text-align: left;
            }
        </style>
        <table class="job-listing">
     <tr>
       <th>ID:</th>
       <td> @job.Id</td>
       </tr>
       <tr>
       <th>Name:</th>
       <td>  @job.Name</td>
       </tr>
       <tr>
       <th>Employer:</th>
       <td>  @job.Employer</td>
       </tr>
       <tr>
       <th>Location:</th>
       <td>  @job.Location</td>
       </tr>
       <tr>
       <th>Position Type:</th>
       <td>  @job.PositionType</td>
       </tr>
       <tr>
       <th>Skill:</th>
       <td>  @job.CoreCompetency</td>
       </tr>
       </table>
        }
    @{
        //TODO #1: Use a loop to display job results in a table.
    }
</div>